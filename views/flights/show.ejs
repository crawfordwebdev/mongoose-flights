<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include("../partials/nav") %>  


<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
  </section>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">Seat:</label>
    <input type="text" name="seat" id="seat-textarea" required pattern="[A-F][1-9]\d?"></input>
    <label for="price-textarea">Price:</label>
    <input type="number" name="price" id="price-textarea"></input>
    <button type="submit">Add Ticket</button>
  </form>
  <section>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td>$ <%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3> 
  <% } %> 
</section>
</main>


  
<%- include('../partials/footer') %>