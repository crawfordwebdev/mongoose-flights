<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input" class="flightInfo">airline:</label>
    <input type="text" name="airline" id="airline-input" required>
    <label for="airport-input" class="flightInfo">airport:</label>
    <input type="text" name="airport" id="airport-input" required>
    <label for="flightNo" class="flightInfo">flight number:</label>
    <input type="text" name="flightNo" id="flightNo-input" required>
    <label for="departs" class="flightInfo">departs:</label>
    <input type="text" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

